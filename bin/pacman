#!/bin/sh
# https://gist.github.com/cirrusUK/9494694

# ANSI Color -- use these variables to easily have different color
#    and format output. Make sure to output the reset sequence after
#    colors (f = foreground, b = background), and use the 'off'
#    feature for anything you turn on.

initializeANSI()
{
 esc=""

  color0="${esc}[30m"; # Foreground BLACK
  color1="${esc}[31m"; # Foreground RED
  color2="${esc}[32m"; # Foreground GREEN
  color3="${esc}[33m"; # Foreground YELLOW
  color4="${esc}[34m"; # Foreground BLUE
  color5="${esc}[35m"; # Foreground PURPLE
  color6="${esc}[36m"; # Foreground CYAN
  color7="${esc}[37m"; # Foreground WHITE

  blackb="${esc}[40m";
  redb="${esc}[41m";
  greenb="${esc}[42m";
  yellowb="${esc}[43m";
  blueb="${esc}[44m";
  purpleb="${esc}[45m";
  cyanb="${esc}[46m";
  whiteb="${esc}[47m"

  boldon="${esc}[1m";    boldoff="${esc}[22m"
  italicson="${esc}[3m"; italicsoff="${esc}[23m"
  ulon="${esc}[4m";      uloff="${esc}[24m"
  invon="${esc}[7m";     invoff="${esc}[27m"

  reset="${esc}[0m"
}

initializeANSI

# p - pacman, g - ghost

p1() { echo -n " $1  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„  "; }
p2() { echo -n " $1â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„â–ˆâ–ˆâ–ˆâ–€â–€ "; }
p3() { echo -n " $1â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€     "; }
p4() { echo -n " $1â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„     "; }
p5() { echo -n " $1â–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„â–„ "; }
p6() { echo -n " $1  â–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€  "; }

g1() { echo -n " $1  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„   "; }
g2() { echo -n " $1â–„${color7}â–ˆâ–€â–ˆ$1â–ˆâ–ˆ${color7}â–ˆâ–€â–ˆ$1â–ˆâ–ˆâ–„ "; }
g3() { echo -n " $1â–ˆ${color7}â–„â–„â–ˆ$1â–ˆâ–ˆ${color7}â–„â–„â–ˆ$1â–ˆâ–ˆâ–ˆ "; }
g4() { echo -n " $1â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ "; }
g5() { echo -n " $1â–ˆâ–ˆâ–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–ˆâ–ˆ "; }
g6() { echo -n " $1â–€   â–€  â–€   â–€ "; }

echo "    BLACK          RED          GREEN         YELLOW         BLUE         PURPLE         CYAN "
g1 $color0;g1 $color1;g1 $color2;p1 $color3;g1 $color4;g1 $color5;g1 $color6;echo
g2 $color0;g2 $color1;g2 $color2;p2 $color3;g2 $color4;g2 $color5;g2 $color6;echo
g3 $color0;g3 $color1;g3 $color2;p3 $color3;g3 $color4;g3 $color5;g3 $color6;echo
g4 $color0;g4 $color1;g4 $color2;p4 $color3;g4 $color4;g4 $color5;g4 $color6;echo
g5 $color0;g5 $color1;g5 $color2;p5 $color3;g5 $color4;g5 $color5;g5 $color6;echo
g6 $color0;g6 $color1;g6 $color2;p6 $color3;g6 $color4;g6 $color5;g6 $color6;echo
echo -n $color0 $boldon;
echo "    color0        color1        color2        color3       color4        color5        color6"
g1 $color0;g1 $color1;g1 $color2;p1 $color3;g1 $color4;g1 $color5;g1 $color6;echo
g2 $color0;g2 $color1;g2 $color2;p2 $color3;g2 $color4;g2 $color5;g2 $color6;echo
g3 $color0;g3 $color1;g3 $color2;p3 $color3;g3 $color4;g3 $color5;g3 $color6;echo
g4 $color0;g4 $color1;g4 $color2;p4 $color3;g4 $color4;g4 $color5;g4 $color6;echo
g5 $color0;g5 $color1;g5 $color2;p5 $color3;g5 $color4;g5 $color5;g5 $color6;echo
g6 $color0;g6 $color1;g6 $color2;p6 $color3;g6 $color4;g6 $color5;g6 $color6;echo
